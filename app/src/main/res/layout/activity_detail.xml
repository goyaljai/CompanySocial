<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Detail_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/detail_image"
            android:src="@drawable/buy"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_title"
                android:textStyle="bold"
                android:fontFamily="@font/amazon"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:text="56654"/>


            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_desc"
                android:fontFamily="@font/amazon"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="This is a Good Product"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="11sp"
                android:layout_marginBottom="13dp"
                android:fontFamily="@font/amazon"
                android:textColor="@color/colorAccent"
                android:text="Brought to you by Diya Closets."/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginBottom="13dp"
                android:fontFamily="@font/amazon"
                android:textColor="@color/white"
                android:text=" NO RETURN, NO CANCELLATION, NO COD"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amazon"
                android:layout_marginLeft="8dp"
                android:text="Fill Details to Buy this"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:layout_margin="3dp"
                android:fontFamily="@font/amazon"
                android:background="@drawable/bg_edittext"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Address"
                android:fontFamily="@font/amazon"
                android:layout_margin="3dp"
                android:background="@drawable/bg_edittext"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Phone Number"
                android:layout_margin="3dp"
                android:fontFamily="@font/amazon"
                android:background="@drawable/bg_edittext"/>



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:id="@+id/buy_now"
            android:background="#144D87"
            android:text="Pay Now"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/amazon"
            android:textSize="25sp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="12dp"
            android:gravity="center"/>

    </LinearLayout>

</ScrollView>